    <script>
        async function incrementQuantity(productId, salePrice) {
            const quantityElement = document.getElementById('sst_' + productId);
            let quantity = parseInt(quantityElement.value);
            
            const response = await fetch(`/quantitymanagement?action=increase&id=${productId}&quantity=${quantity}`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                quantity += 1;
                quantityElement.value = quantity; 
                updateTotalPrice(productId, salePrice, quantity);
                const totalSumElement = document.getElementById('totalSum');
                if (totalSumElement) {
                totalSumElement.textContent = calculateTotalSum(); 
                }
            } else if (response.status === 400) {
                const data = await response.json();
                showMessage(data.message); 
            } else {
                console.error('Failed to update quantity');
            }
        }


    
        async function decrementQuantity(productId, salePrice) {
            const quantityElement = document.getElementById('sst_' + productId);
            const totalSumElement = document.getElementById('totalSum');
                if (totalSumElement) {
                totalSumElement.textContent = calculateTotalSum(); 
                }
            let quantity = parseInt(quantityElement.value);
            if (quantity > 1) {
                quantity -= 1;
                quantityElement.value = quantity;
               

                updateTotalPrice(productId, salePrice, quantity);
                await sendQuantityToServer(productId, quantity, 'decrease');
            }
        }
    
        function updateTotalPrice(productId, salePrice, quantity) {
            const totalPrice = quantity * salePrice;
            document.getElementById('tPrice_' + productId).textContent = `₹${totalPrice}`;
        }
        async function sendQuantityToServer(productId, quantity, action) {
                try {
                    let url = `/quantitymanagement?action=${action}&id=${productId}&quantity=${quantity}`;
                    const response = await fetch(url, {
                    method: 'GET',
                    headers: {
                    }
                });
    
                if (!response.ok) {
                    throw new Error('Failed to update quantity');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }


        function showMessage(message) {
        const messageElement = document.createElement('div');
        messageElement.textContent = message;
        messageElement.classList.add('added-message');
        document.body.appendChild(messageElement);

        setTimeout(() => {
            messageElement.style.display = 'none';
        }, 2000);
        }
    </script>
    



	<section class="login_box_area section_gap">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-6">
					<div class="login_form_inner">
						<% 
						if(typeof message!=='undefined')
						{
							%>
							<p style="color:grren"><%=message%></p>
							<%
						}
						%>
						<h3>Register</h3>
						<form class="row login_form" action="/register" method="post" id="contactForm" novalidate="novalidate" >
							<div class="col-md-12 form-group">
								<input type="text" class="form-control" id="name" name="name" placeholder="Name" pattern="[a-zA-Z ]+" title="Only letters and spaces allowed" required>
								<span class="error-message" style="color: red;" id="name-error"></span>
							</div>
							<div class="col-md-12 form-group">
								<input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
								<span class="error-message" style="color: red;" id="email-error"></span>
							</div>
							<div class="col-md-12 form-group">
								<input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone number" pattern="[0-9]+" title="Only numbers allowed" required>
								<span class="error-message" style="color: red;" id="phone-error"></span>
							</div>
							<div class="col-md-12 form-group">
								<input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
								<span class="error-message" style="color: red;" id="password-error"></span>
							</div>
							<div class="col-md-12 form-group">
								<input type="password" class="form-control" id="password1" name="password1" placeholder="Confirm Password" required>
								<span class="error-message" style="color: red;" id="password1-error"></span>
							</div>
							<div class="col-md-12 form-group">
								<button type="submit"  value="submit"  class="primary-btn">Register</button>
								<a href="/login">login?</a>
								<a href="#">999bookstore</a>
							</div>
						</form>	
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->


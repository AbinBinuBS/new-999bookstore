<%-include('header.ejs')%>
        <section class="content-main">
            <form id="BannerForm" action="/admin/addbanner" method="post" enctype="multipart/form-data">                <div class="row">
                    <div class="col-9">
                        <div class="content-header">
                            <h2 class="content-title">Add Banner</h2>
                            <div>
                                <button type="submit" class="btn btn-md rounded font-sm hover-up">Submit</button>                            
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Banner</h4>
                            </div>
                            <div class="card-body">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" name="bannername" class="form-control" id="bannername">
                                    <span id="bannerError" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Target</label>
                                    <input type="text" placeholder="Type here" name="target" class="form-control" id="target">
                                    <span id="targetError" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Date</label>
                                    <input type="Date" placeholder="Type here" name="date" class="form-control" id="date">
                                    <span id="dateError" class="text-danger"></span>
                                </div>
                                <div>
                                    <input type="checkbox" value="yes" id="tickOption" name="tickOption">
                                    <label for="tickOption">Crop Image</label>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Text</label>
                                    <textarea placeholder="Type here" name="text" class="form-control" rows="4"></textarea>
                                    <span id="textError" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Media</h4>
                            </div>
                            <div class="card-body">
                                <div class="input-upload">
                                    <img src="/assets1/imgs/theme/upload.svg" alt="">
                                    <input class="form-control" name="image" accept="image/*" type="file" multiple required>
                                </div>
                                <% if(typeof imgMessage !== 'undefined') { %>
                                    <p style="color:red"><%= imgMessage %></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
        <script>
            const form = document.getElementById('BannerForm')
             form.addEventListener('submit', function(event) {
                event.preventDefault();
                const bannername = document.getElementById('bannername').value;
                const target = document.getElementById('target').value;
                const date = document.getElementById('date').value;
                const text = document.querySelector('textarea[name="text"]').value
                document.querySelectorAll('.text-danger').forEach(element => element.textContent = '');

                if (bannername.trim() === '') {
                document.getElementById('bannerError').textContent = 'Banner Name is required.';
                return false;
                }

                if (target.trim() === '') {
                document.getElementById('targetError').textContent = 'Target is required.';
                return false;
                }

                if (date.trim() === '') {
                document.getElementById('dateError').textContent = 'Date is required.';
                return false;
                }

                if (text.trim() === '') {
                document.getElementById('textError').textContent = 'Text is required.';
                return false;
                }

                
                this.submit();
        
        })

        </script>

